{
  "name": "picture-gallery",
  "version": "0.4.0-beta",
  "description": "ðŸ–¼ âœ¨ Universal JavaScript app, made with ECMAScript modules",
  "repository": "github:jimthoburn/picture-gallery",
  "license": "MIT",
  "engines": {
    "node": ">=16.20.0"
  },
  "type": "module",
  "scripts": {
    "snowpack": "snowpack",
    "create:images": "node --require dotenv/config create/images.js",
    "rename:images": "node --require dotenv/config create/images-rename.js",
    "optimize:images": "node --require dotenv/config create/images-optimize.js",
    "create:albums": "node --require dotenv/config create/albums.js",
    "create:archives": "node --require dotenv/config create/archives.js",
    "create": "npm run create:images && npm run rename:images && npm run optimize:images && npm run create:albums && npm run create:archives",
    "build": "node --require dotenv/config build.js",
    "serve": "serve ./_site/ --listen=4000",
    "start": "node --require dotenv/config server.js",
    "comment-experimental-vm-modules": "https://github.com/facebook/jest/issues/9430",
    "test": "BROWSER=chromium node --experimental-vm-modules node_modules/.bin/jest --detectOpenHandles --verbose"
  },
  "dependencies": {
    "htm": "^3.1.1",
    "lit-element": "^3.3.2",
    "markdown-it": "^13.0.1",
    "markdown-it-deflist": "^2.1.0",
    "preact": "^10.13.2",
    "preact-render-to-string": "^6.0.3",
    "xstate": "^4.37.2"
  },
  "devDependencies": {
    "@squoosh/cli": "^0.7.3",
    "archiver": "^5.3.1",
    "capitalize": "^2.0.4",
    "chalk": "^5.2.0",
    "dotenv": "^16.0.3",
    "exif": "^0.6.0",
    "express": "^4.18.2",
    "fs-extra": "^11.1.1",
    "image-size": "^1.0.2",
    "imageoptim-cli": "^3.0.7",
    "is-url": "^1.2.4",
    "jest": "^29.5.0",
    "jest-playwright-preset": "^3.0.1",
    "js-beautify": "^1.14.7",
    "lodash": "^4.17.21",
    "mkdirp": "^3.0.1",
    "node-fetch": "^3.3.1",
    "playwright": "^1.33.0",
    "request": "^2.88.2",
    "serve": "^14.2.0",
    "snowpack": "^2.9.3"
  },
  "jest": {
    "preset": "jest-playwright-preset"
  },
  "snowpack": {
    "install": [
      "htm",
      "lit-element",
      "markdown-it",
      "markdown-it-deflist",
      "preact",
      "preact/hooks",
      "preact-render-to-string",
      "xstate"
    ],
    "installOptions": {
      "polyfillNode": true,
      "clean": true,
      "optimize": false,
      "sourceMap": true
    }
  }
}
