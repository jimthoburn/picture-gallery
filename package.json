{
  "name": "picture-gallery",
  "version": "0.1.0",
  "description": "ðŸ–¼ âœ¨ Universal JavaScript app, made with ECMAScript modules",
  "repository": "github:jimthoburn/picture-gallery",
  "license": "MIT",
  "engines": {
    "node": ">=12.14.0"
  },
  "type": "module",
  "scripts": {
    "prepare": "snowpack",
    "create:images": "node --experimental-modules create/images.js",
    "optimize:images": "node --experimental-modules create/images-optimize.js",
    "create:albums": "node --experimental-modules create/albums.js",
    "create:archives": "node --experimental-modules create/archives.js",
    "create": "npm run create:images && npm run optimize:images && npm run create:albums && npm run create:archives",
    "build": "node --experimental-modules build.js",
    "serve": "serve ./_site/ --listen=4000",
    "start": "node --experimental-modules server.js",
    "test": "BROWSER=chromium jest --detectOpenHandles --verbose",
    "test:playwright-examples": "node --experimental-modules test/playwright-examples.js"
  },
  "dependencies": {
    "htm": "^2.2.1",
    "lit-element": "^2.2.1",
    "markdown-it": "^10.0.0",
    "markdown-it-deflist": "^2.0.3",
    "preact": "^10.3.2",
    "preact-render-to-string": "^5.1.4",
    "xstate": "^4.7.8"
  },
  "devDependencies": {
    "@babel/core": "^7.8.6",
    "archiver": "^3.1.1",
    "capitalize": "^2.0.2",
    "color-thief": "^2.2.5",
    "concurrent-transform": "^1.0.0",
    "connect-slashes": "^1.4.0",
    "esm": "^3.2.25",
    "exif": "^0.6.0",
    "express": "^4.17.1",
    "fs-extra": "^8.1.0",
    "gulp": "^4.0.2",
    "gulp-image-resize": "^0.13.1",
    "imageoptim-cli": "^3.0.2",
    "is-url": "^1.2.4",
    "jest": "^25.1.0",
    "jest-playwright-preset": "0.0.12",
    "js-beautify": "^1.10.3",
    "lodash": "^4.17.15",
    "node-fetch": "^2.6.0",
    "playwright": "^0.11.1",
    "request": "^2.88.2",
    "serve": "^11.3.0",
    "snowpack": "^1.4.0"
  },
  "jest": {
    "preset": "jest-playwright-preset"
  },
  "snowpack": {
    "webDependencies": [
      "htm",
      "lit-element",
      "markdown-it",
      "markdown-it-deflist",
      "preact",
      "preact/hooks",
      "preact-render-to-string",
      "xstate"
    ],
    "installOptions": {
      "clean": true,
      "optimize": false,
      "sourceMap": true
    }
  }
}
