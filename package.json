{
  "name": "picture-gallery",
  "version": "0.2.0",
  "description": "ðŸ–¼ âœ¨ Universal JavaScript app, made with ECMAScript modules",
  "repository": "github:jimthoburn/picture-gallery",
  "license": "MIT",
  "engines": {
    "node": ">=14.15.3"
  },
  "type": "module",
  "scripts": {
    "snowpack": "snowpack",
    "create:images": "node create/images.js",
    "optimize:images": "node create/images-optimize.js",
    "create:albums": "node create/albums.js",
    "create:archives": "node create/archives.js",
    "create": "npm run create:images && npm run optimize:images && npm run create:albums && npm run create:archives",
    "build": "node build.js",
    "serve": "serve ./_site/ --listen=4000",
    "start": "node server.js",
    "comment-experimental-vm-modules": "https://github.com/facebook/jest/issues/9430",
    "test": "BROWSER=chromium node --experimental-vm-modules node_modules/.bin/jest --detectOpenHandles --verbose"
  },
  "dependencies": {
    "htm": "^3.0.4",
    "lit-element": "^2.4.0",
    "markdown-it": "^12.0.4",
    "markdown-it-deflist": "^2.1.0",
    "preact": "^10.5.7",
    "preact-render-to-string": "^5.1.12",
    "xstate": "^4.15.3"
  },
  "devDependencies": {
    "@squoosh/cli": "^0.6.0",
    "archiver": "^5.1.0",
    "capitalize": "^2.0.3",
    "chalk": "^4.1.0",
    "exif": "^0.6.0",
    "express": "^4.17.1",
    "fs-extra": "^9.0.1",
    "imageoptim-cli": "^3.0.2",
    "is-url": "^1.2.4",
    "jest": "^26.6.3",
    "jest-playwright-preset": "^1.4.2",
    "js-beautify": "^1.13.0",
    "lodash": "^4.17.20",
    "mkdirp": "^1.0.4",
    "node-fetch": "^2.6.1",
    "playwright": "^1.7.1",
    "request": "^2.88.2",
    "serve": "^11.3.2",
    "snowpack": "^2.9.3"
  },
  "jest": {
    "preset": "jest-playwright-preset"
  },
  "snowpack": {
    "install": [
      "htm",
      "lit-element",
      "markdown-it",
      "markdown-it-deflist",
      "preact",
      "preact/hooks",
      "preact-render-to-string",
      "xstate"
    ],
    "installOptions": {
      "polyfillNode": true,
      "clean": true,
      "optimize": false,
      "sourceMap": true
    }
  }
}
